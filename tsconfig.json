{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "checkJs": true
  },
  "include": ["website"],
  "exclude": ["*/**/node_modules", "*/**/dist"]
}
